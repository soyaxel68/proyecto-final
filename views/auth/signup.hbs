{{#each errors}}
    {{this.msg}}
{{/each}}

{{#if todo_error}}
    {{todo_error}}
{{/if}}


<div class="col">
    <form action="/auth/signup" method="POST">
        {{!-- Nombre --}}
        <div class="form-control">
            <label for="name" class="form-label">Nombre</label>
            <input 
                type="text" 
                class="form-control" 
                id="name" 
                name="name" 
                placeholder="Ingrese su nombre"
                value={{name}}
            >
        </div>

        {{!-- Correo --}}
        <div class="form-control">
            <label for="email" class="form-label">Correo Electronico</label>
            <input 
                type="email" 
                class="form-control" 
                id="email" 
                name="email" 
                placeholder="Ingrese su correo electronico"
                value={{email}}
            >
        </div>

        {{!-- Password --}}
        <div class="form-control">
            <label for="password" class="form-label">Correo Electronico</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Ingrese su contraseña">
        </div>

        {{!-- Confirm Password --}}
        <div class="form-control">
            <label for="confirm_password" class="form-label">Correo Electronico</label>
            <input type="password" class="form-control" id="confirm_password" name="confirm_password" placeholder="Ingrese repita su contraseña">
        </div>

        <button class="btn btn-primary">
            Signup
        </button>
    </form>
</div>